<script src="<%= path %>assets/js/common.js"></script>
<script>
  (function () {
    const correctPassword = "sanpo2025"; // パスワードをここで設定

    const entered = sessionStorage.getItem("auth");
    if (entered === correctPassword) return;

    const tryPassword = prompt(
      "このサイトは関係者専用です。パスワードを入力してください："
    );
    if (tryPassword === correctPassword) {
      sessionStorage.setItem("auth", correctPassword);
    } else {
      alert("パスワードが間違っています。");
      location.href = "https://www.google.com"; // 間違ったらリダイレクト
    }
  })();
</script>
