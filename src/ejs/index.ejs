<% const pageId = 'home'; const commonData = data.common; const currentPageData
= data.pages[pageId] || {}; const newsArticles = (data.news_data &&
data.news_data.articles) || []; const newsData = data.news; %>
<!DOCTYPE html>
<html lang="<%= lang %>">
  <%- include('./_includes/_head', { path: assetPath, lang: lang, pageTitle:
  currentPageData.meta_title || commonData.title, pageDescription:
  currentPageData.meta_description || commonData.description }) %>
  <body class="page-<%= pageId %> page-top" data-page-id="<%= pageId %>">
    <%- include('_includes/_header', { pageLinkBasePath: pageLinkBasePath,
    assetPath: assetPath, pageLinkToOtherLangRoot: pageLinkToOtherLangRoot,
    pageId: pageId, data: data, lang: lang }) %>
    <section class="hero">
      <div class="hero__video-wrapper">
        <video
          class="hero__video"
          autoplay
          loop
          muted
          playsinline
          loading="lazy"
        >
          <source
            src="<%= assetPath %>video/hero-video.webm"
            type="video/webm"
          />
          <source src="<%= assetPath %>video/hero-video.mp4" type="video/mp4" />
          <%- (currentPageData.hero && currentPageData.hero.video_fallback_text)
          || 'お使いのブラウザは動画タグに対応していません。' %>
        </video>
        <div class="hero__overlay"></div>
      </div>
      <div class="hero__wave" aria-hidden="true">
        <svg
          class="wave"
          viewBox="0 0 1368 400"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
